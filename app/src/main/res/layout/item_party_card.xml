<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_alignParentTop="true"
            android:id="@+id/iv_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@null" />

        <TextView
            android:textColor="@color/colorPrimarytext"
            android:layout_below="@+id/iv_foto"
            android:id="@+id/tv_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:textSize="24sp" />


        <TextView
            android:textColor="@color/colorSecondText"
            android:layout_below="@+id/tv_nome"
            android:id="@+id/tv_produtora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingBottom="24dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_youtube"
            android:src="@drawable/ic_youtube"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignTop="@+id/iv_facebook"
            android:layout_toLeftOf="@+id/iv_facebook"
            android:layout_toStartOf="@+id/iv_facebook" />

        <ImageView
            android:id="@+id/iv_whatsapp"
            android:src="@drawable/ic_whatsapp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignTop="@+id/iv_youtube"
            android:layout_toLeftOf="@+id/iv_youtube"
            android:layout_toStartOf="@+id/iv_youtube" />

        <ImageView
            android:id="@+id/iv_map"
            android:src="@drawable/ic_map"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="13dp"
            android:layout_alignTop="@+id/iv_facebook"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/iv_facebook"
            android:src="@drawable/ic_facebook"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/tv_nome"
            android:layout_toStartOf="@+id/iv_map" />

    </RelativeLayout>
</android.support.v7.widget.CardView>